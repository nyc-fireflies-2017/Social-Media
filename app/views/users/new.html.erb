<div class="container">
  <h2>Sign Up</h2>
  <%= form_for(@user, url: users_path) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br><br>

  <%= f.label :username %>
  <%= f.text_field :username %><br><br>

  <%= f.label :email %>
  <%= f.text_field :email %><br><br>

  <%= f.label :password %>
  <%= f.text_field :password %><br><br>

  <%= f.submit "Sign Up" %>
<%end %>
</div>
